    <style>
        .custom-link {
            color: #FEE56E;
            text-decoration: wavy underline;
            position: relative;
        }

        .custom-link::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -4px;
            width: 100%;
            height: 2px;
            background: repeating-linear-gradient(
                to right,
                #4a90e2 0%,
                #4a90e2 33%,
                transparent 33%,
                transparent 100%
            ) 0 0 / 15px 2px repeat-x;
            opacity: 0.7;
        }

        .custom-link:hover::after {
            opacity: 1;
        }
    </style>
